{% extends "main.j2" %}
{% block content %}
  <h1>Polish Orders</h1>

  
  <table id="orders-table">
    {% if polish_orders %}
      <thead>
        <tr>
          {% for c in polish_orders[0].keys() %}
            <th>{{ c }}</th>
          {% endfor %}
           <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% for row in polish_orders %}
          <tr>
            {% for v in row.values() %}
              <td>{{ v }}</td>
            {% endfor %}
             <td>
              <button class="update-btn" data-id="{{ row.ID }}"> Update </button>
            </td>
            <td>
              <button class="delete-btn" data-id="{{ row.ID }}"> Delete </button>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    {% else %}
      <thead>
        <tr>
          <th>ID</th>
          <th>Customer</th>
          <th>Name</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Line Total</th>
          <th>Date</th>
           <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="9" style="text-align:center; padding:1em;">
            No polish orders found.
          </td>
        </tr>
      </tbody>
    {% endif %}
  </table>

  {% for row in polish_orders %}
    <div
      id="update-polish-{{ row.polishOrderID }}"
      class="update-polish"
      style="display:none; margin-top:24px; border:1px solid #ccc; padding:12px;"
    >
      <h2>Update Order # {{ row.polishOrderID }}</h2>
      <form method="post" action="/polish-orders/update">
        <input type="hidden" name="polishOrderID" value="{{ row.polishOrderID }}">
        <input type="hidden" name="orderID" value="{{ row.orderID }}">

        <table>
          <thead>
            <tr>
              <th>OrderItem</th>
              <th>OrderID</th>
              <th>Name</th>
              <th>Quantity</th>
              <th>OrderDate</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{ row.polishOrderID }}</td>
              <td>{{ row.orderID }}</td>
              <td>
                <select name="polishID">
                  {% for p in all_polishes %}
                    <option value="{{ p.polishID }}"
                      {% if p.name == row.Name %}selected{% endif %}>
                      {{ p.name }}
                    </option>
                  {% endfor %}
                </select>
              </td>
              <td>
                <select name="quantity">
                  {% for i in range(1,11) %}
                    <option value="{{ i }}"
                      {% if i == row.Quantity %}selected{% endif %}>
                      {{ i }}
                    </option>
                  {% endfor %}
                </select>
              </td>
              <td>
                <input
                  type="datetime-local"
                  name="orderDate"
                  value="{{ row.Date|replace(' ', 'T') }}"
                  required
                >
              </td>
            </tr>
          </tbody>
        </table>

        <button style="margin-top: 12px;"> Save Changes</button>
      </form>
    </div>
  {% endfor %}

  <!-- UPDATE FORMS -->
  {% for row in polish_orders %}
    <div
      id="update-order-{{ row.ID }}"
      class="update-order"
      style="display:none; margin-top:1em; padding:1em; border:1px solid #ccc;"
    >
      <h3>Update Order #{{ row.ID }}</h3>
      <form method="post" action="{{ url_for('update_polish_order') }}">
        <input type="hidden" name="polish_order_id" value="{{ row.ID }}">
        <div>
          <label for="new-qty-{{ row.ID }}">Quantity:</label>
          <input
            type="number"
            id="new-qty-{{ row.ID }}"
            name="new_quantity"
            min="1"
            value="{{ row.Quantity }}"
            required
          >
        </div>
        <button type="submit" style="margin-top:0.5em;">Save Changes</button>
      </form>
    </div>
  {% endfor %}


 <!-- CREATE NEW ORDER -->
  <button id="toggle-create-order-btn" type="button">Create Order</button>

  <div id="create-order-container" style="display: none; margin-top: 40px;">
    <h2>Create New Order</h2>
    <form method="post" action="{{ url_for('create_polish_order') }}">
      <table>
        <thead>
          <tr>
            <th>Customer</th>
            <th>Polish</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <select name="customer_id" id="customer" required>
                {% for cust in customer_list %}
                  <option value="{{ cust.customerID }}">{{ cust.fName }} {{ cust.lName }}</option>
                {% endfor %}
              </select>
            </td>
            <td>
              <select name="polish_id" id="polish" required>
                {% for p in all_polishes %}
                  <option value="{{ p.polishID }}">{{ p.name }}</option>
                {% endfor %}
              </select>
            </td>
            <td>
              <input type="number" name="quantity" id="qty" min="1" value="1" required>
            </td>
          </tr>
        </tbody>
      </table>
      <button type="submit" style="margin-top:0.5em;">Submit Order</button>
    </form>
  </div>

  <script>

   // show/hide update form
    document.querySelectorAll('.update-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.update-order').forEach(div => div.style.display = 'none');
        const id = btn.dataset.id;
        document.getElementById(`update-order-${id}`).style.display = 'block';
        document.getElementById(`update-order-${id}`).scrollIntoView({ behavior: 'smooth' });
      });
    });

    document.querySelectorAll('.update-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.update-polish')
          .forEach(div => div.style.display = 'none');
        const id = btn.dataset.id;
        const form = document.getElementById(`update-polish-${id}`);
        form.style.display = 'block';
        form.scrollIntoView({ behavior: 'smooth' });
      });
    });

    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.dataset.id;
        if (!confirm(`Are you sure you want to delete order #${id}?`)) return;
        await fetch(`/polish-orders/delete/${id}`, { method: 'DELETE' });
        window.location.reload();
      });
    });
      // toggle create-order form
    const toggleBtn = document.getElementById('toggle-create-order-btn');
    const createContainer = document.getElementById('create-order-container');
    toggleBtn.addEventListener('click', () => {
      createContainer.style.display =
        createContainer.style.display === 'none' ? 'block' : 'none';
      if (createContainer.style.display === 'block') {
        createContainer.scrollIntoView({ behavior: 'smooth' });
      }
    });
  </script>
{% endblock %}

